<!--        action="pondlog_dashboard"-->
<!--        sequence="25"-->
<!--        id="menu_dashboard"/>-->


    <!-- Menu -->
    <menuitem id="menu_dashboard" name="Dashboard"
                  parent="main_pondlog_menu"/>
    <menuitem id="menu_pondlogdashboard" action="pondlog_dashboard" parent="menu_dashboard"
              sequence="1"/>

</odoo>