<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_device" model="ir.actions.act_window">
            <field name="name">Devices</field>
            <field name="res_model">device</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the devices</p>
            </field>
        </record>

        <!-- Views -->
        <record id="device_form_view" model="ir.ui.view">
            <field name="name">device.form</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <form string="Device Form">
                    <sheet>

                        <group>
                            <field name="controller_ids" invisible="1"/>
                            <field name="name"/>
                    <field name="device_type"/>
                            <field name="active"/>
                            <field name="controller_id" domain="[('type','ilike',device_type),('state','=','available')]"/>
                            <field name="customer_id"/>
                    <field name="user_id"/>
                    <field name="history">
                        <tree create="true" >
                        <field name="customer_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                            <field name="comments"/>
                        </tree>
                    </field><field name="controller_history">
                        <tree create="true" >
                         <field name="customer_id"/>
                     <field name="device_id"/>
                    <field name="controller_id"/>
                    <field name="reason_for_replacement"/>
                    <field name="replacement_date"/>
                        </tree>
                    </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="device_search_view" model="ir.ui.view">
            <field name="name">device.search</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="device_type"/>
                            <field name="active"/>
                            <field name="controller_id"/>
                            <field name="customer_id"/>
                    <field name="user_id"/>
                    <field name="history"/>
                </search>
            </field>
        </record>

        <record id="device_tree_view" model="ir.ui.view">
            <field name="name">device.tree</field>
            <field name="model">device</field>
            <field name="arch" type="xml">
                <tree string="Device Tree">
                    <field name="name"/>
                    <field name="device_type"/>
                            <field name="active"/>
                            <field name="controller_id"/>
                            <field name="customer_id"/>
                    <field name="user_id"/>
                    <field name="history"/>
                </tree>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="device_mobilization"
               sequence="4" name="Device Cycle"/>
<menuitem id="history"
               sequence="4" name="Histories" parent="device_mobilization"/>
        <menuitem id="menu_device" action="action_device" parent="device_mobilization"
               sequence="3"/>
    </data>
</odoo>
