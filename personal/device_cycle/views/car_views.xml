<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Views -->
        <record id="car_desc_form_view" model="ir.ui.view">
            <field name="name">car.desc.form</field>
            <field name="model">car.desc</field>
            <field name="arch" type="xml">
                <form string="Car Desc Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="leads"  widget='many2many_tags'/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="car_desc_tree_view" model="ir.ui.view">
            <field name="name">car.desc.tree</field>
            <field name="model">car.desc</field>
            <field name="arch" type="xml">
                <tree string="Car Desc">
                     <field name="name"/>
                            <field name="description"/>
                    <field name="leads" widget='many2many_tags'/>
                </tree>
            </field>
        </record>

        <record id="car_desc_search_view" model="ir.ui.view">
            <field name="name">car.desc.search</field>
            <field name="model">car.desc</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
<field name="description"/>
                </search>
            </field>
        </record>

         <!-- Action -->
        <record id="action_car_desc" model="ir.actions.act_window">
            <field name="name">Car Desc</field>
            <field name="res_model">car.desc</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Car Desc</p>
            </field>
        </record>
        
        <!-- Menu -->
        <menuitem id="menu_car_desc" action="action_car_desc"
               sequence="4"/>


    </data>
</odoo>
