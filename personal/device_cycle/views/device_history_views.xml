<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_device_history" model="ir.actions.act_window">
            <field name="name">Device History</field>
            <field name="res_model">device.history</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Device History</p>
            </field>
        </record>

        <!-- Views -->
        <record id="device_history_form_view" model="ir.ui.view">
            <field name="name">device.history.form</field>
            <field name="model">device.history</field>
            <field name="arch" type="xml">
                <form string="Controller Form">
                    <sheet>
                        <group>
                            <field name="device_id" />
                            <field name="customer_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="comments"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="device_history_search_view" model="ir.ui.view">
            <field name="name">device.history.search</field>
            <field name="model">device.history</field>
            <field name="arch" type="xml">
                <search>
                                                <field name="device_id"/>

                    <field name="customer_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="comments"/>
                </search>
            </field>
        </record>

        <record id="device_history_tree_view" model="ir.ui.view">
            <field name="name">device.history.tree</field>
            <field name="model">device.history</field>
            <field name="arch" type="xml">
                <tree string="Device History">
                     <field name="customer_id"/>
                     <field name="device_id"/>

                    <field name="customer_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="comments"/>
                </tree>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_device_history" action="action_device_history" parent="history"
               sequence="4"/>


    </data>
</odoo>
