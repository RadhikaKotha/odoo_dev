<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Views -->
        <record id="controller_history_form_view" model="ir.ui.view">
            <field name="name">controller.history.form</field>
            <field name="model">controller.history</field>
            <field name="arch" type="xml">
                <form string="Controller Form">
                    <sheet>
                        <group>
                             <field name="customer_id" attrs="{'readonly': [('id', '>', 0)]}"/>
                     <field name="device_id" attrs="{'readonly': [('id', '>', 0)]}"/>
                    <field name="controller_id"/>
                    <field name="reason_for_replacement"/>
                    <field name="replacement_date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="controller_history_search_view" model="ir.ui.view">
            <field name="name">controller.history.search</field>
            <field name="model">controller.history</field>
            <field name="arch" type="xml">
                <search>
                     <field name="customer_id"/>
                     <field name="device_id"/>
                    <field name="controller_id"/>
                    <field name="reason_for_replacement"/>
                    <field name="replacement_date"/>
                </search>
            </field>
        </record>

        <record id="controller_history_tree_view" model="ir.ui.view">
            <field name="name">controller.history.tree</field>
            <field name="model">controller.history</field>
            <field name="arch" type="xml">
                <tree string="Controller History">
                    <field name="customer_id"/>
                     <field name="device_id"/>
                    <field name="controller_id"/>
                    <field name="reason_for_replacement"/>
                    <field name="replacement_date"/>
                </tree>
            </field>
        </record>

         <!-- Action -->
        <record id="action_controller_history" model="ir.actions.act_window">
            <field name="name">Controller History</field>
            <field name="res_model">controller.history</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Device History</p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_controller_history" action="action_controller_history" parent="history"
               sequence="4"/>


    </data>
</odoo>
