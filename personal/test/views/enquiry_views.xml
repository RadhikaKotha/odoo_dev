<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action -->
        <record id="action_enquiry" model="ir.actions.act_window">
            <field name="name">Enquiries</field>
            <field name="res_model">enquiry</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first cash rounding</p>
            </field>
        </record>

        <!-- Views -->
        <record id="enquiry_form_view" model="ir.ui.view">
            <field name="name">enquiry.form</field>
            <field name="model">enquiry</field>
            <field name="arch" type="xml">
                <form string="Enquiry Form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" class="oe_inline"/></h1>
                        </div>
                        <group>
                            <field name="partner_id"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="enquiry_search_view" model="ir.ui.view">
            <field name="name">enquiry.search</field>
            <field name="model">enquiry</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                            <field name="active"/>
                </search>
            </field>
        </record>

        <record id="enquiry_tree_view" model="ir.ui.view">
            <field name="name">enquiry.tree</field>
            <field name="model">enquiry</field>
            <field name="arch" type="xml">
                <tree string="Enquiry Tree">
                    <field name="name"/>
                    <field name="partner_id"/>
                            <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_enquiry" action="action_enquiry"
                 parent="account.account_management_menu" sequence="4"/>
    </data>
</odoo>
